{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "@db/*": ["./db/*"]
    }
  },
  "include": ["app/**/*", "db/**/*", "storage/**/*", "*.config.ts"],
  "exclude": ["node_modules"]
}
